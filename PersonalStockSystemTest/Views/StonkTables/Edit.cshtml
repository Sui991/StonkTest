@model PersonalStockSystemTest.Models.model_Edit
@using PersonalStockSystemTest.EFModel;
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "StonkTables", FormMethod.Post))
{

    @Html.HiddenFor(x => x.UpdateData.id)
    <table class="table table-bordered">
        <tr>

            <th>交易時間</th>
            <th>股票代號</th>
            <th>股票名稱</th>
            <th>交易種類</th>
            <th>股數</th>
            <th>單價</th>
            <th>手續費</th>
            <th>交易稅</th>

        </tr>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*資料顯示*@
        <tr>
            <td>@Html.DisplayFor(s => Model.UpdateData.time) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.stonkID) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.name) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.type) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.num) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.price) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.tax) </td>
            <td>@Html.DisplayFor(s => Model.UpdateData.fax) </td>

        </tr>


        <tr>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.time, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.time, "", new { @class = "text-danger" })
            </td>

            <td>
                @Html.TextBoxFor(model => model.UpdateData.stonkID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.stonkID, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.name, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.type, "", new { @class = "text-danger" })

            </td>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.num, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.num, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.price, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.tax, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.tax, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.UpdateData.fax, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateData.fax, "", new { @class = "text-danger" })
            </td>

        </tr>
    </table>
    //表單送出確認
    <div class="btn">

        <input class="Search" type="submit" value="確認" />

    </div>

}


